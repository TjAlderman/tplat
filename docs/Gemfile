source "https://rubygems.org"

# Jekyll core (uncomment if you want to specify version explicitly)
# Latest stable Jekyll is 4.4.0 (as of 2025, 4.x is still the main series)
# gem "jekyll", "~> 4.4.0"

# Default theme for new Jekyll sites
gem "minima", "~> 2.5.0"  # minima 2.5.0 is still latest as of now

# GitHub Pages gem â€” latest version ~> 232 is from 2023,
gem "github-pages", "~> 232", group: :jekyll_plugins

group :jekyll_plugins do
  # jekyll-feed latest is 0.17.0
  gem "jekyll-feed", "~> 0.17"
end

# Windows and JRuby platform gems
platforms :mingw, :x64_mingw, :mswin, :jruby do
  # tzinfo latest 2.x series (tzinfo 2.0.4+ stable)
  gem "tzinfo", ">= 2.0", "< 3"
  gem "tzinfo-data"
end

# Windows directory watcher performance booster
gem "wdm", "~> 0.1.2", platforms: [:mingw, :x64_mingw, :mswin]

# http_parser.rb locked on JRuby to 0.6.x still valid, latest is 0.6.0
gem "http_parser.rb", "~> 0.6.0", platforms: [:jruby]

# WEBrick required for Ruby 3.0+ (Jekyll uses it for the server)
gem "webrick", ">= 1.9.1"
